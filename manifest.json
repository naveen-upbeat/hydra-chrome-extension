{
  "manifest_version": 2,

  "name": "Hydra Localhost Helper",
  "description": "This extension helps in opening local versions of prod Hydra websites",
  "version": "1.0",

  "icons" :{
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "view/popup.html"
  },
  "permissions": [
    "http://*/",
    "https://*/*",
    "activeTab"
  ]
}